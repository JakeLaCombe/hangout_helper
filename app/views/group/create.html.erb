<div class="row">
  <div class="push_two eight columns">
  	  <h1>Create Group</h1>

  <%= form_for @group,url: {:controller => 'group',
                  :action => 'create'}, do |f|%>
    <div class="field"><%= f.text_field :name, class: "input text", placeholder: "Name" %></div>
    <div class="field"><%= f.text_field :zip, class:"input numeric", placeholder: "Zip" %></div>
    <div class="large primary btn pretty"><%= f.submit "Create Group"%></div>
  <% end %>	
  </div>
</div>
